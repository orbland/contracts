{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "types": [
            "node",
            "ethers",
            "chai",
            "mocha"
        ],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./tasks",
        "./test",
        "./script",
        "./typechain-types"
    ],
    "files": [
        "./hardhat.config.ts"
    ]
}